<body>
	<div class="col-xs-3">
		<div class="box1">
			<section class="Userinfo">
				<h3>User info</h3>
				<%= attachment_image_tag @user, :profile_image,size:'100x100', fallback: "no_image.jpg" %>
	<!--         	<%= image_tag('VL78Nlyj_400x400.png', :size => '80x80' ) %> -->
				<p>name <%= @user.name %></p>
				<p>introduction <%=  current_user.introduction %></p>
				<!-- idを取得し、/user/:id/editコントローラーに飛ぶ -->
				<span class="glyphicon glyphicon-cog" aria-hidden="true"><%= link_to "option", edit_user_path(current_user.id) %></span>
			</section>
			<section class="Newbook">
				<h3>New book</h3>
				<%= form_for(@book) do |book|%>
					<p>Title</p>
					<%= book.text_field :title %>
					<p>Opinion</p>
					<%= book.text_field :body %>
					<%= book.submit "Create Book" %>
				<% end %>
			</section>
		</div>
	</div>
	<div class="col-xs-9">
		<table class="box2 table table-striped">
			<caption></caption>
			<thead>
				<tr>
					<h3>Books</h3>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td></td>
					<td>Title</td>
					<td>Opinion</td>
				</tr>
			</tbody>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%=link_to attachment_image_tag(@user, :profile_image,size:'50x50', fallback: "no_image.jpg"), user_path(current_user.id) %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</body>