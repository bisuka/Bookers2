					</td>
					<td><%= @book_id.title %></td>
					<td><%= @book_id.body %></td>
					<% if @user == current_user %>
						<td><%= link_to "Edit" , edit_book_path(@book_id) %></td>
						<td><%= link_to "Destroy", book_path(@book_id), method: :delete  %></td>
